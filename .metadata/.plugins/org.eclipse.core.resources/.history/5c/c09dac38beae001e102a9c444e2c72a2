package Main;

import Data.Create;
import Data.MapData;
import Util.Ci;
import Util.Cw;

public class ActionMove {
	
	public static void moveRun() {
		MapData.mapList.get(Create.playerMap).mapInfo();
		w:while(true) {
			Cw.wn();
			Cw.wn("[     ▲위로       ]");
			Cw.wn("[◀좌측 / 우측▶/ 메뉴]");
			Cw.wn("[     ▼아래       ]");
			Cw.wn();
			Cw.wn(Create.playerX + "," + Create.playerY);
			
			String cmd = Ci.r("행동입력");
			switch(cmd) {
			case "우측":
				Create.playerX++;
				if(MapData.checkingPlayerMapX(Create.playerX)) {
					if(MapData.checkingPlayerMapY(Create.playerY)) {
						Cw.wn("앞으로 한칸 진행했습니다.");
						Create.assignPlayerMap();
						MapData.mapList.get(Create.playerMap).mapInfo();
					}
				}else {
					Create.playerX--;
					Cw.wn("막혀있습니다.");
					MapData.mapList.get(Create.playerMap).mapInfo();
				}
				break;
			case "좌측":
				Create.playerX--;
				if(MapData.checkingPlayerMapX(Create.playerX)) {
					if(MapData.checkingPlayerMapY(Create.playerY)) {
						Cw.wn("뒤로 한칸 진행했습니다.");
						Create.assignPlayerMap();
						MapData.mapList.get(Create.playerMap).mapInfo();
					}
				}else {
					Create.playerX++;
					Cw.wn("막혀있습니다.");
					MapData.mapList.get(Create.playerMap).mapInfo();
				}
				break;
			case "위로":
				Create.playerY++;
				if(MapData.checkingPlayerMapY(Create.playerY)) {
					if(MapData.checkingPlayerMapY(Create.playerX)) {
						Cw.wn("위로 한칸 진행했습니다.");
						Create.assignPlayerMap();
						MapData.mapList.get(Create.playerMap).mapInfo();
					}
				}else {
					Create.playerY--;
					Cw.wn("막혀있습니다.");
					MapData.mapList.get(Create.playerMap).mapInfo();
				}
				break;
			case "아래":
				Create.playerY--;
				if(MapData.checkingPlayerMapY(Create.playerY)) {
					Cw.wn("아래로 한칸 진행했습니다.");
					Create.assignPlayerMap();
					MapData.mapList.get(Create.playerMap).mapInfo();
				}else {
					Create.playerY++;
					Cw.wn("막혀있습니다.");
					MapData.mapList.get(Create.playerMap).mapInfo();
				}
				break;
			case "메뉴":
				break w;
			default :
				Cw.wn("아 제대로 입력 하라구");
				break;
			}
		}
	}

}
