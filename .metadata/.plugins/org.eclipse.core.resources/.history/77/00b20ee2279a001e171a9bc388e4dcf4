package Rpc;

import java.util.Scanner;

public class Rps {
	void Run() {
		System.out.println("==가위바위보==");
		//1 가위 2 바위 3 보
		int com = (int)(Math.random() * 3+1);
		
		int player = 1;
		//입력
		//자동 임포트 단축키 : ctrl + shift + o (영문자 오)
		System.out.println("가위 바위 보를 입력하세요.");
		Scanner sc = new Scanner(System.in);
		String cmd = sc.next();
		
		String comRpc = "";
		String r = "";
		
		while(true) {
			switch(cmd) {
			case "가위":
				switch (com) {
				case 1:
					comRpc = "가위";
					System.out.println("컴퓨터: " + comRpc);
					r = "비김";
					break;

				case 2:
					comRpc = "바위";
					System.out.println("컴퓨터: " + comRpc);
					r = "짐";
					break;
					
				case 3:
					comRpc = "보";
					System.out.println("컴퓨터: " + comRpc);
					r = "이김";
					break;
				}
				break;
				
			case "바위":
				switch (com) {
				case 1:
					comRpc = "가위";
					System.out.println("컴퓨터: " + comRpc);
					r = "이김";
					break;

				case 2:
					comRpc = "바위";
					System.out.println("컴퓨터: " + comRpc);
					r = "비김";
					break;
					
				case 3:
					comRpc = "보";
					System.out.println("컴퓨터: " + comRpc);
					r = "짐";
					break;
				}
				break;
				
			case "보":
				switch (com) {
				case 1:
					comRpc = "가위";
					System.out.println("컴퓨터: " + comRpc);
					r = "짐";
					break;

				case 2:
					comRpc = "바위";
					System.out.println("컴퓨터: " + comRpc);
					r = "이김";
					break;
					
				case 3:
					comRpc = "보";
					System.out.println("컴퓨터: " + comRpc);
					r = "비김";
					break;
				}
				break;
				
			default:
				System.out.println("다른것을 냈음");
				break;			
			}
			System.out.println("결과: " + r);
		}
	}
}
