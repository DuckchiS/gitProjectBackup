			case "ì¬ì‹œì‘":
				Create.playerHp = 0;
				break;
			default:
				Cw.wn();
				Cw.wn("ë¶ˆê°€ëŠ¥í•œ í–‰ë™ì…ë‹ˆë‹¤.");
				break;
			}
		}
		
	}

}
