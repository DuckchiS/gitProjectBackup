				a.charmap();
			}
			Cw.wn("[âŒ›:íƒìƒ‰ / ğŸ’–:íœ´ì‹ / ğŸš¶â€â™€ï¸:ì´ë™ / ğŸ§‘:ìƒíƒœì°½ / âœ¨:ê¸°ìˆ  / ğŸ’¨:ì¬ì‹œì‘]");
			String cmd = Ci.rl("í–‰ë™ì…ë ¥");
			switch(cmd) {
			case "íƒìƒ‰":
				switch(Create.playerMap) {
				case 4:
					ActionVillageSearch.villageSearchRun();
					break;
				default:
					int dice = (int)(Math.random()*10 + 1);
					if(dice<5) {
						regen.regenrun();
						ActionSearch.battle();
					}else {
						Cw.wn();
						Cw.wn("ì•„ë¬´ê²ƒë„ ì—†ëŠ”ë“¯í•˜ë‹¤..");
					}
					break;
				}
				break;
			case "íœ´ì‹":
				ActionRest.restRun();
				break;
			case "ì´ë™":
				ActionMove.moveRun2();
				break;
			case "ìƒíƒœì°½":
				if(rank.equals("F")) {
					for(Char a:Create.newChar) {
						a.charinfo();
					}
				}else {
					ActionStatus.statusRun();
				}
				break;
			case "ê¸°ìˆ ":
				for(Char a:Create.newChar) {
					for(Skill skill:a.charSkillBag) {
						if(a.charSkillBag.size() > 0) {
							ActionSkillList.skillListRun();
						}else {
							Cw.wn("ê¸°ìˆ ëª©ë¡ì´ ì—†ìŠµë‹ˆë‹¤.");
