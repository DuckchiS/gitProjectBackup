public class ActionPage {
	
	public void actionrun() {
		MonsterRegen regen = new MonsterRegen();
		MapData.mapLoad();
		String rank = "";
		Cw.wn();
		for(Char a:Create.newChar) {
			a.charmaininfo();
			rank = a.rank;
		}
		w:while(true) {
			DeadCheck.heroDead();
//			Cw.wn();
//			Cw.wn("í˜„ì¬ë°©:["+MapData.mapList.get(Create.playerMap).mapName+"]");
			Cw.wn();
