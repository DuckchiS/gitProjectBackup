package com.peisia.c.board.shop;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.Scanner;

import com.peisia.c.board.admin.ProcAdmin;
import com.peisia.c.board.shop.display.Display;
import com.peisia.c.board.util.DB;

public class ProcShop {
	public static void run() {
		Display.showTitle();
		Display.showMainMenu();
		DB.dbInit();
		
		Scanner sc = new Scanner(System.in);
		loop:
		while(true) {
			System.out.println("옵션을 선택하세요:");
			BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
			String cmd = sc.next();
			switch(cmd) {
			case "1":
				ProcS_List.run();
				break;
			case "2":
				ProcS_Read.run();
				break;
			case "3":
				ProcS_Write.run();
				break;
			case "4":
				ProcS_Delete.run();
				break;
			case "5":
				ProcS_Update.run();
				break;
			case "6":
				ProcS_List.search();
				break;
			case "0":
				ProcAdmin.run();
				break;
			case "x":
				System.out.println("이전 화면으로 돌아갑니다.");
				break loop;
			default:
				System.out.println("옵션에 없습니다. 다시 입력하세요.");
				break;
			}
		}
	}
}
